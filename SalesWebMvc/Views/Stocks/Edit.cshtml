@model Frexco.Models.ViewModels.StockFormViewModel

@{
    ViewData["Title"] = "Edit Stock";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Stock.Id" />
            <div class="form-group">
                <label asp-for="Stock.Name" class="control-label"></label>
                <input asp-for="Stock.Name" class="form-control" />
                <span asp-validation-for="Stock.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock.Qtd" class="control-label"></label>
                <input asp-for="Stock.Qtd" class="form-control" />
                <span asp-validation-for="Stock.Qtd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock.ProductId" class="control-label"></label>
                <select asp-for="Stock.ProductId" asp-items="@(new SelectList(Model.Products,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-success" >Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}